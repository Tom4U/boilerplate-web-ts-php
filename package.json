{
    "name": "boilerplate-web-ts-php",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "css:scss": "node-sass --output-style compressed -o dist src/styles",
        "css:autoprefix": "postcss -u autoprefixer -r dist/*.css",
        "css:lint": "stylelint src/styles/*.scss --custom-syntax postcss-scss",
        "prerender": "posthtml -c posthtml.json",
        "build": "rimraf -g dist/**/* && run-p build:*",
        "build:css": "run-s css:lint css:scss css:autoprefix",
        "build:images": "imagemin src/images/**/* --out-dir=dist/images",
        "build:app": "npm run prerender && webpack --mode=production",
        "update:app": "npm run prerender && webpack --mode=development",
        "serve:app": "browser-sync start --proxy \"localhost:42000\" --files \"dist\"",
        "serve:api": "php -S localhost:42000 -t dist",
        "watch": "run-p serve:* build watch:*",
        "watch:css": "onchange \"src/styles\" -- npm run build:css",
        "watch:images": "onchange \"src/images\" -- npm run build:images",
        "watch:ts": "onchange \"src/ts\" -- npm run update:app",
        "watch:html": "onchange \"src/views\" -- npm run update:app",
        "watch:api": "onchange \"src/api\" -- npm run update:app"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Tom4U/boilerplate-web-ts-php.git"
    },
    "author": "Thomas Ohms",
    "license": "MIT",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "autoprefixer": "^10.4.14",
        "browser-sync": "^2.29.1",
        "eslint": "^8.38.0",
        "eslint-webpack-plugin": "^4.0.1",
        "filemanager-webpack-plugin": "^8.0.0",
        "html-webpack-plugin": "^5.5.1",
        "htmlnano": "^2.0.4",
        "imagemin-cli": "^7.0.0",
        "imagemin-gifsicle": "^7.0.0",
        "node-sass": "^8.0.0",
        "npm-run-all2": "^6.0.5",
        "onchange": "^7.1.0",
        "postcss-cli": "^10.1.0",
        "postcss-scss": "^4.0.6",
        "posthtml": "^0.16.6",
        "posthtml-cli": "^0.10.0",
        "posthtml-modules": "^0.9.1",
        "rimraf": "^5.0.0",
        "stylelint": "^15.5.0",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.4",
        "webpack": "^5.79.0",
        "webpack-cli": "^5.0.1"
    }
}
